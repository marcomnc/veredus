<?php
/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>

<div class="form-language header-selector">
    <a id="language-selector" class="selected">
        <?php echo $this->htmlEscape(Mage::app()->getStore()->getName()) ?>
    </a>    
</div>

<div class="language-switcher header-selector-pop-up" style="display:none">
<?php foreach ($this->getStores() as $_lang): ?>
    <?php if ($_lang->getId() != $this->getCurrentStoreId()): ?>
    <div class="form-language header-selector" >        
        <a href="<?php echo $_lang->getCurrentUrl();?>" >
                <?php echo $this->htmlEscape($_lang->getName()) ?>
        </a>       
    </div>
    <?php endif; ?>
    <?php endforeach; ?>    
</div>

