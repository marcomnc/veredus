<?php
$_product    = $this->getProduct();
$_attributes = Mage::helper('core')->decorateArray($this->getAllowAttributes());
$_config = Mage::Helper('core')->jsonDecode($this->getJsonConfig());
$_typeLayouts = unserialize(Mage::getStoreConfig('veredus/settings/attribute_type_layout'));
?>

<?php if ($_product->isSaleable() && count($_attributes)):?>
    <?php foreach($_attributes as $_attribute): 
    				$_typeLayout = "";
          	foreach ($_typeLayouts as $_lay):
          		if (strtolower($_lay['attribute']) == strtolower($_attribute->getCode())):
          			$_typeLayout = $_lay['type'];
          		endif;
          	endforeach;?>   
        <div class="attribute-chooser<?php if ($_attribute->decoratedIsLast){?> last<?php }?>">
            <div class="input-box">
                <select name="super_attribute[<?php echo $_attribute->getAttributeId() ?>]" 
                	      id="attribute<?php echo $_attribute->getAttributeId() ?>" 
                	      class="required-entry super-attribute-select"
                	      rel="<?php echo $this->__('Choose') . ' ' . $_attribute->getLabel();?>">
                    <option <?php if ($_typeLayout != ""): ?> style="display:none" <?php endif; ?>>
                    	<?php echo $this->__('Choose') ?> <?php echo $_attribute->getLabel(); ?>
                    </option>
                  </select>
              </div>
              
              <?php 
              	if ($_typeLayout != ""): ?>
              		<ul rel="attribute<?php echo $_attribute->getAttributeId() ?>" style="display:none">
              				
              		</ul>
             <?php
              	endif;?>
        </div>
    <?php endforeach; ?>
    <script type="text/javascript">
        var spConfig = new Product.Config(<?php echo Mage::Helper('core')->jsonEncode($_config) ?>);
    </script>
<?php endif;?>
