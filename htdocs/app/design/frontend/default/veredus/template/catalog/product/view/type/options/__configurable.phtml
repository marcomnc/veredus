                                  jQuery('[name="'+ix+'"] [rel="'+id+'"]').addClass("enabled");
                              }
                          })
                      });
                      jQuery(this).addClass("selected");
                  }                    
                  return 0;
                });
                  
                  var element = jQuery(".super-attribute-select").get(0);
