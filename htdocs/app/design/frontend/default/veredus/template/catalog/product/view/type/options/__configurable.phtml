                   ->where('_opts.option_id = ' . $_attOpt['id'])
                   ->where('_opts.store_id = 0');
            foreach ($_attrOptSelect as $_aos):              
                if (substr($_aos['value'],0,1) == '#'):
                    $_colorImmage = $_aos['value'];
                endif;
            endforeach;
?>
                        <div style="background-color: <?php echo $_colorImmage;?>">     
                            &nbsp;
                        </div>

<?php   endif; 
        endif;?>
                    </div>                    
                </li>
<?php   $_first = false; ?>     
<?php endforeach;?>                     
                </ul>
            </div>
    
<?php endif; ?>
