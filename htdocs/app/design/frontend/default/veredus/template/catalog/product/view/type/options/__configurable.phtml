                  if (jQuery("#"+ul+" option").length>1) {                        
                      jQuery('#'+ul).val(jQuery(this).attr("rel") );
                      //Prototype Call
                      spConfig.configureElement($(ul));                        
                      ch.each(function(idx) {
                          var ix=idx;
                          jQuery('[name="'+ix+'"] li').removeClass("selected");
                          jQuery('[name="'+ix+'"] li').removeClass("enabled");
