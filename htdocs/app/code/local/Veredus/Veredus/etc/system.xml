                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <attribute_type_layout>
                            <label>Attributi con template custom</label>
                            <frontend_model>veredus/adminhtml_catalog_attribute_type_layout</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Il tipo layout può assumere i seguenti valori:Color, Taglia</comment>
                        </attribute_type_layout>
                        <attribute_image_color>
                            <label>Attributo che identifica l'immagine per la palette dei colori</label>
                            <frontend_type>select</frontend_type>
                            <source_model>veredus/adminhtml_system_config_source_media_imagecolor</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Se selezionata l'immagine dell'attributo verra utilizzata per la tavolozza colori</comment>
                        </attribute_image_color>
                        <cms-block-sizeguide>
                            <label>Pagina CMS per il size guide</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_cms_page</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Appare in tutti i dettaglio prodotti dove è presente un attributo con layout size</comment>
                        </cms-block-sizeguide>
                        <cms-block-privacy-register>
                            <label>Pagina CMS per la privacy in fase di registrazione</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_cms_page</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
